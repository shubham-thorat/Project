<style>
    body {
        font-family: arial;
        margin: 0;
    }

    nav {
        background: #ff5353;
        padding: 20px 10px;
    }

    nav ul {
        max-width: 960px;
        margin: 0 auto;
        padding: 0;
    }

    nav li {
        list-style-type: none;
        display: inline-block;
        margin: 0 10px 0 0;
    }

    nav a {
        color: #fff;
        font-size: 18px;
        background: rgba(255, 255, 255, 0.2);
        text-decoration: none;
        padding: 10px;
        display: block;
    }

    main,
    header {
        max-width: 960px;
        margin: 30px auto;
        padding: 0 10px;
        color: #333;
    }

    .button {

        border: 2px solid black;
        width: 15rem;
        background-color: aqua;
    }

    .btn {
        margin: 50px 20px;
        cursor: pointer;
        padding: 5px;
        font-size: 18px;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        text-decoration: none;
    }
</style>

<body>
    <nav>
        <ul>
            {{#if user}}
                <li><a href="/auth/logout">Logout</a></li>
            {{else}}
                 <li><a href="/auth/login">Login</a></li>
            {{/if}}
            <li><a href="/">Homepage</a></li>
            <li><a href="/profile"> Profile </a></li>
        </ul>
    </nav>
    <button style="margin: 20px 30px;">
        <a class="btn" href="/auth/google"> <i class="fab fa-google-plus-g"></i> Login With Google</a>
    </button>
</body>